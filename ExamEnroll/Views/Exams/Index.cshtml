            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher.Name)
        </td>      
        <td>
            @*@Html.ActionLink("编辑", "Edit", new { id=item.Eid }) |*@
