@model IEnumerable<ExamEnroll.Exam>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>报名信息</h2>

<p>
    @Html.ActionLink("新增", "Create")
</p>
<table class="table">
    <tr>
        <th>
           ID
        </th>
        <th>
           用户名
        </th>
        <th>
